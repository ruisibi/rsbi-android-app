<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/delete_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/delete_icon" />
    

    <TextView
        android:id="@+id/tv_contacts_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="11dip"
        android:singleLine="true"
        android:text="you"
        android:textColor="#2D414E"
        android:textSize="16sp" />
     <ImageView
        android:id="@+id/delete_item_shaixuan_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_contacts_item_name"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:visibility="invisible"
        android:src="@drawable/shaixuan" />

</RelativeLayout>