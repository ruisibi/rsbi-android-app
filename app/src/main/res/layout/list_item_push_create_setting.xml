<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/push_create_border">
    <TextView
        android:id="@+id/tv_push_create_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="test1"/>

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:contentDescription=""
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src ="@mipmap/left_arrow_gray"/>

    <ImageView
        android:id="@+id/img_cross"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_cross"
        android:layout_toLeftOf="@id/img_right"
        android:layout_toStartOf="@id/img_right"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:contentDescription=""
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_push_create_setting_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/img_cross"
        android:layout_toStartOf="@id/img_cross"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:text="test2"/>

</RelativeLayout>